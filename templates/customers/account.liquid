      <div id="tab-4" class="tab-content">
          <div class="order-history-wrapper">
            <div class="page-width">
              <div>
               <h2 class="text-center-heading border-heading margin-0 ">{{ 'customer.orders.title' | t }}</h2>
                {% paginate customer.orders by 20 %}
                  {%- if customer.orders.size > 0 -%}
                    <div role="table" class="order-history">
                        <div role="rowgroup" class="transection-list-main">
                          {%- for order in customer.orders -%}
                            {%- comment -%}<p>transactions-{{ order.transactions.payment_details.credit_card_company }}</p>{%- endcomment -%}
                            <div class="row-wrapper" data-index="{{ forloop.index}}">
                              <div class="transaction-history-title" data-test="{{ order.transactions.payment_details.credit_card_company }}">
                                <span class="heading">Transactions</span>
                                <span class="toggle-button{% if forloop.first %} active{% endif %}" data-text="{% if forloop.first %}Hide Details{% else %}Show Details{% endif %}">{% if forloop.first %}Hide Details{% else %}Show Details{% endif %}</span>
                              </div>
                              <div role="row" class="order-outer-wrapper">
                                <div class="order-header-wrapper transection-list-inner">
                                  <div class="order-info">
                                    <h3 class="order-name">
                                      order {{ order.name }}
                                    </h3>
                                  </div>
                                  <div class="order-item-info">
                                    {%- assign order_date = order.created_at | date : "%B %d, %Y" -%}
                                    <p class="order-date">{{ order_date }}</p>
                                  </div>
                                  <div class="ordre-price">
                                    {{ order.total_price | money }}
                                  </div>
                                </div>
                                <div class="order-info-wrapper"{% if forloop.first %} style="display:block"{% endif %}>
                                  <div class="order-info transection-list-inner">
                                    <div class="order-address">
                                      {%- if order.shipping_address != blank -%}
                                        <div class="address">
                                          <p class="heading">{{ 'customer.order.shipping_address' | t }}</p>
                                          <div class="address-info">
                                            {%- unless order.shipping_address.address1 == blank and order.shipping_address.city == blank -%}
                                              <div class="address-text">
                                                {%- unless order.shipping_address.address1 == blank %}
                                                  {{ order.shipping_address.address1 }}
                                                {%- endunless -%}
                                                {%- unless order.shipping_address.city == blank %}
                                                  {{ order.shipping_address.city }} 
                                                {%- endunless -%}
                                              </div>
                                            {%- endunless -%}
                                            {%- unless order.shipping_address.country_code == blank and unless order.shipping_address.zip == blank -%}
                                            <div class="address-text">
                                              {%- unless order.shipping_address.country_code == blank %}
                                                {{ order.shipping_address.country_code }}
                                              {%- endunless -%}
                                              {%- unless order.shipping_address.zip == blank %}
                                                {{ order.shipping_address.zip}}
                                              {%- endunless -%}
                                            </div>
                                            {%- endunless -%}
                                          </div>
                                        </div>
                                      {%- endif -%}
                                      {%- if order.billing_address != blank -%}
                                        <div class="address">
                                          <p class="heading">{{ 'customer.order.billing_address' | t }}</p>
                                          <div class="address-info">
                                            <div class="address-text">
                                              {{ order.billing_address.address1 }}
                                              {{ order.billing_address.city }} 
                                            </div>
                                            <div class="address-text">
                                              {{ order.billing_address.country_code}}
                                              {{ order.billing_address.zip}}
                                            </div>
                                          </div>
                                        </div>
                                      {%- endif -%}
                                    </div>                              
                                    <div class="order-item-info">
                                      {%- for item in order.line_items -%}
                                        {%- unless item.title == blank and item.product.has_only_default_variant -%}
                                          <div class="item-info">
                                            {%- unless item.title == blank-%}
                                              <p class="title">{{ item.title }}</p>
                                            {%- endunless -%}
                                            {% unless item.product.has_only_default_variant %}
                                              <p class="variant-title">
                                                {% for option in item.options_with_values %}
                                                  <span>{{ option.name }} {{ option.value }}
                                                    {%- unless forloop.last -%}
                                                    , 
                                                    {%- endunless -%}
                                                  </span>
                                                {% endfor %}
                                              </p>
                                            {% endunless %}
                                          </div>
                                        {%- endunless -%}
                                      {%- endfor -%}
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          {%- endfor -%}
                        </div>
                      </div>
                    </div>
                  {%- else -%}
                    <p class="text-center">{{ 'customer.orders.none' | t }}</p>
                  {%- endif -%}
          
                  {%- if paginate.pages > 1 -%}
                    {%- if paginate.parts.size > 0 -%}
