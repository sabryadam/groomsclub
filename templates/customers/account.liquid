<script>
  if(!localStorage.getItem("customerToken")){
    var url = theme_custom.api_base_url+'/api/customer/getToken/{{customer.id}}';
    $(document).ready(function(){
      $.get(url, function(data, status){
        localStorage.setItem("customerToken", data.data.token);
        $.ajax({
          url: "{{ 'account.js' | asset_url }}",
          dataType: 'script',
          async: false
        });
      });
    });
  }else{
    $.ajax({
      url: "{{ 'account.js' | asset_url }}",
      dataType: 'script',
      async: false
    });
  }
  $(document).on("click", ".toggle-button", function(){
    var that = $(this);
    if ($(this).hasClass('active')) {
      $(this).text(that.attr("data-text")).attr("data-text","Hide Details").removeClass('active');
      $(".row-wrapper").find(".order-info-wrapper").slideUp("slow");
    } else {
      $(".toggle-button").text("Show Details").attr("data-text","Hide Details").removeClass('active');
      $(this).text(that.attr("data-text")).attr("data-text","Show Details").addClass('active');
      $(".row-wrapper").find(".order-info-wrapper").slideUp("slow");
      $(this).closest(".row-wrapper").find(".order-info-wrapper").slideDown("slow");
    }
  })
</script>
