<script>
  $(document).ready(function(){
    if( $(".template-cart .edit-item-popup .swatch.swatch-wrap.swatch-color").length ){
      $(".template-cart .edit-item-popup .swatch.swatch-wrap.swatch-color").each(function(){
        if( $(this).find(".swatch-element").length < 2 ){
          $(this).hide();
        }
      });
    }
    if( $(".product_var_cart").length ){
      $(".product_var_cart").each(function(){
        $(this).find(".product-option").each(function(){
          var data_name = $(this).data("name");          
          var data_value = $(this).find(".product-option-val").text();
          $(`input[type="radio"][data-name="${data_name}"][value="${data_value}"]`).prop('checked', true);
          $(`input[type="radio"][data-name="${data_name}"][value="${data_value}"] + label`).trigger("click");          
        });
      });
    }
  });
  // get fit-finder and set Cart attribute
  window.addEventListener('DOMContentLoaded', function() {
    if(getCookie('fit-finder-data')){
      var fitData = JSON.parse(getCookie('fit-finder-data'))
      var height = fitData.height;
      $(`.height_val`).val(height).change();      
      var weight = fitData.weight;
      $(`#weight`).val(weight);
      var age = fitData.age;
      $(`#age`).val(age);
      var ff_html = '';
      var jacket_size = fitData.jacketSize.split(':');
      if (jacket_size[1] == "S") {
        jacket_type = 'Short'
      } else if (jacket_size[1] == "R") {
        jacket_type = 'Regular'
      } else if (jacket_size[1] == "L") {
        jacket_type = 'Long'
      }           
      var ff_html = `<div class="ff-data jacket-wrap"><strong>Jacket : </strong><span>${jacket_size[0]} ${jacket_type}</span></div>`;''
      if(fitData.pantSize ) {
        var pants_size = fitData.pantSize.split('x');
        var pants_hight = pants_size[1];
        var pants_waist = pants_size[0];
        $(`#pant-waist`).val(pants_waist).change();
        ff_html += `<div class="ff-data"><strong>Pants : </strong><span>${pants_waist} x ${pants_hight}</span></div>`;
      } else {
        var pants_hight = fitData.pants_hight_output;
        var pants_waist = fitData.pants_waist_output;        
        $(`#pant-waist`).val(pants_waist).change();
        ff_html += `<div class="ff-data"><strong>Pants : </strong><span>${pants_waist} x ${pants_hight}</span></div>`;
      }
      $(".fit-finder-output #ff-data-box").html(ff_html);
      $(`.fit-finder-output`).removeClass("hidden")      
    } 
  })
</script>

