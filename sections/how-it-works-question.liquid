<div class="how-it-works-page faq-section" style="background-color:{{ section.settings.bg_color }};">
  <div class="page-width">
      <div class="faq-two-part">
        <div class="left-side-content">
          <div class="section-question-title h2 border-heading">
            {{ section.settings.heading }}
          </div>
            <div class="section-question-description">
              {{ section.settings.description }}
            </div>
            <div class="btn-heading-wrapper">
                <div class="section-question-btn-heading">
                  {{ section.settings.button_heading }}
                </div>
                <div class="section-question-btn">
                  <a href="{{ section.settings.button_url }}" class="button {% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">{{ section.settings.button_text }} <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="right-side-content">
            {% for block in section.blocks %}
              <div class="question-answer-wrapper">
                    <div class="question-heading">
                      {{ block.settings.question }}
                    </div>
                    <div class="answer-content">
                      {{ block.settings.answer }}
                    </div>
              </div>
            {% endfor %}
        </div>
      </div>
  </div>
</div>
<style>
 .show {
   display: block;
 } 
</style>
{% schema %}
{
  "name": "Questions",
  "settings": [
    {
      "type": "header",
      "content": "Left Content"
    },
    {
      "type":"text",
      "id":"heading",
      "label":"Title",
      "default":"Heading"
    },
    {
      "type":"richtext",
      "id":"description",
      "label":"Description",
      "default":"<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc pharetra justo elit, quis egestas velit vehicula ac. Nulla facilisi. Praesent vitae tortor nec augue pellentesque ullamcorper vitae id nulla.</p>"
    },
    {
      "type":"text",
      "id":"button_heading",
      "label":"Button Header",
      "default":"still have questions?"
    },
    {
      "type":"text",
      "id":"button_text",
      "label":"Button Text",
      "default":"Contact Us"
    },
    {
      "type":"url",
      "id":"button_url",
      "label":"Button Url"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary",
      "default": false,
      "label": "Use Outline Button Style"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type":"color",
      "id":"bg_color",
      "label":"Background Color",
      "default":"#fff"
    }
  ],
  "blocks":[
    {
      "type":"accordion",
      "name":"Accordion",
      "settings":[
        {
            "type":"richtext",
            "id":"question",
            "label":"Question",
            "default":"<p>Aliquam tellus nisi, interdum vel consectetur sed, vehicula a velit?</p>"
        },
        {
          "type":"richtext",
          "id":"answer",
          "label":"Answer",
          "default":"<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc pharetra justo elit, quis egestas velit vehicula ac. Nulla facilisi. Praesent vitae tortor nec augue pellentesque ullamcorper vitae id nulla.</p>"
        } 
      ]
    }
  ]
}
{% endschema %}