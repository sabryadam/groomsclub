<div class="modal-wrapper" data-target="remove-data-for-user">
  <div class="modal-wrapper-inner-wrapper">
    <h4 class="title">
      <span class="heading">Are you sure you want to remove this?</span>
      <span class="close-icon">
        <img src="https://cdn.shopify.com/s/files/1/0585/3223/3402/files/close_1.png" alt="close-icon">
      </span>
    </h4>
    <div class="add-guest-inner-wrapper inner-wrapper">
      <input type="hidden" class="event_id" />
      <input type="hidden" class="member_id" />
      <input type="hidden" class="look_id" />
      <input type="hidden" class="host_id" />
      <div class="text-center">
        <button class="button button--primary" data-value="yes">Yes</button>
        <button class="button button--primary" data-value="no">No</button>
      </div>
    </div>
  </div>
</div>
<div class="step-content-wrapper event-step-1 active" data-step-content-wrap="1">
  <div class="text-center">
    <button type="button" class="button button--secondary" id="tourbutton" style="margin-bottom: 15px;">
      Click How to Create Event 
    </button>
  </div>
  <input type="hidden" value="" id="event-id" />
  <div class="page-width-inner-wrapper">
    <h4 class="section-title xs-show">Create an Event</h4>
    <div class="event-block-wrap event-type-block-wrap">
      {% if section.settings.event_name_heading != blank %}
        <h1 class="heading">{{ section.settings.event_name_heading }}</h1>
      {% endif %}
      <div class="field form-wrap" data-tour="step: 1; title: EVENT NAME; content: Example cart description text displays cart description">     
        <input class="event-name" type="text" name="event_name" data-id="event-name" id="EventForm-EventName" autocomplete="given-name" placeholder="{{ section.settings.event_name_placeholder }}" maxlength="100" />
        <p class="form-error"></p>
      </div>
    </div>
    <div class="event-block-wrap event-type-section-wrap event-radio-box-section" data-tour="step: 2; title: EVENT TYPE; content: Example cart description text displays cart description">
      {% if section.settings.event_type_heading != blank %}
        <h2 class="heading">{{ section.settings.event_type_heading }}</h2>
      {% endif %}
      <div class="box-wrap">
        {%- for block in section.blocks -%}
          {%- if block.type == 'event_type' -%}
            <label class="Squer-radio-button-inner box-inner-wrap" data-class="{{ block.settings.event_type_title | downcase }}" data-event-type-box="{{ block.settings.event_type_title | downcase }}" id="{{block.id}}">
              <input type="radio" data-id="event-type" name="event-type" data-event-type-id="{{forloop.index}}" value="{{ block.settings.event_type_title }}" />
              <span class="checkmark">
                {% if block.settings.event_type_icon != blank %}
                  <div class="event-type-icon icon-wrap">
                    {{ block.settings.event_type_icon }}
                  </div>
                {% endif %}
                {% if block.settings.event_type_title != blank  %}
                  <h3 class="event-type-title">
                    {{ block.settings.event_type_title }}
                  </h3>
                {% endif %}
              </span>
            </label>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <!-- <p class="event-type-error form-error"></p> -->
      <p class="form-error">Please select Event type.</p>
    </div>
    <div class="event-block-wrap event-date-wrap">
      {% if section.settings.when_is_your_event_heading != blank %}
        <h3 class="heading">{{ section.settings.when_is_your_event_heading }}</h3>
      {% endif %}
      <div class="field form-wrap event-date" data-tour="step: 3; title: WHEN IS YOUR EVENT DATE?; content: Example cart description text displays cart description">
        <!-- <div class="fake-calender">
          <span class="selected_date">MM/DD/YYYY</span>
          <span class="date-icon">
            <img src="https://cdn.shopify.com/s/files/1/0585/3223/3402/files/calendar_1.png?v=1675597220" width="22" height="22" alt="Calendar icon" />
          </span>
        </div>      -->
        <span class="event-date-icon">{% render 'calendar-icon' %}</span>
        <input id="event_date" class="event-data-first-step" type="text" name="input1" placeholder="Select Event Date" required title="Enter a date in this formart DD-MM-YYYY" />
      </div>
      <p class="form-error">Please select Event Date.</p>
    </div>
    <div class="event-block-wrap event-radio-box-section role-in-event-wrap">
      {% if section.settings.when_is_your_role_in_event_heading != blank %}
        <h3 class="heading">{{ section.settings.when_is_your_role_in_event_heading }}</h3>
      {% endif %}
      <div class="box-wrap" data-tour="step: 4; title: WHAT IS YOUR ROLE IN THE EVENT?; content: Example cart description text displays cart description">
        {%- for block in section.blocks -%}
          {%- assign event_type_text = block.settings.event_type | downcase  -%}
          {%- if block.type == 'event_role' -%}
            {% assign  forloopIndex = forloop.index | minus : 2 %}
            <label class="Squer-radio-button-inner box-inner-wrap {% if event_type_text == 'special event' %} hidden{% endif %}{% if event_type_text == 'other' %} show{% endif %}"  id="{{block.id}}" data-class="{{ event_type_text }}">
              <input type="radio" data-id="event-role" name="event-role" data-event-role-id="{{forloopIndex}}" data-value="{{block.settings.event_role_title}}" value="{{forloopIndex}}" />
              <span class="checkmark">
                {% if block.settings.event_role_icon != blank %}
                  <div class="event-role-icon icon-wrap">
                    {{ block.settings.event_role_icon }}
                  </div>
                {% endif %}
                {% if block.settings.event_role_title != blank  %}
                  <h3 class="event-type-title">
                    {{ block.settings.event_role_title }}
                  </h3>
                {% endif %}
              </span>
            </label>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <p class="form-error">Please select Event Role.</p>
    </div>
    <div class="event-block-wrap event-radio-box-section border-bottom-none event-phone-number">
      {% if section.settings.phone_number_title != blank %}
        <h3 class="heading">{{ section.settings.phone_number_title }}</h3>
      {% endif %}
      <div class="field form-wrap" data-tour="step: 5; title: PHONE NUMBER?; content: Example cart description text displays cart description">  
        <div class="phone-number-and-icon">
          <input class="phone-number form_phone" data-id="event-phone" type="text" name="event_name" id="EventForm-EventOwnerContactNumber"  placeholder="{{ section.settings.phone_number_placeholder }}" maxlength="14" minlength="10" required />
          <span class="call-icon">
            <img src="https://cdn.shopify.com/s/files/1/0585/3223/3402/files/telephone_1.png?v=1675597289" width="22" height="22" alt="Phone icon" />
          </span>
        </div>   
        <p class="form-error">Please Enter This Filled.</p>
      </div>
    </div>
    <div class="api_error text-center" style="display: none"></div>
    <div class="button-wrapper">
      <button type="button" class="btn-wrap button--secondary event-update-button hidden">
        <span class="label">
          Update Event
        </span>
        <span class="icon">
          <img class="blue-icon" src="https://cdn.shopify.com/s/files/1/0585/3223/3402/files/next-blue-icon.png?v=1675601344" width="22" height="22" alt="Next Arrow">
          <img class="white-icon" src="https://cdn.shopify.com/s/files/1/0585/3223/3402/files/next-white-icon.png?v=1675601344" width="22" height="22" alt="Next Arrow">
        </span>
      </button>
      <button type="button" class="btn-wrap button--secondary create-event-button">
        <span class="label">
          Next <span class="look-add-btn hidden">(Add Look)</span>
        </span>
        <span class="icon">
          <img class="blue-icon" src="https://cdn.shopify.com/s/files/1/0585/3223/3402/files/next-blue-icon.png?v=1675601344" width="22" height="22" alt="Next Arrow" />
          <img class="white-icon" src="https://cdn.shopify.com/s/files/1/0585/3223/3402/files/next-white-icon.png?v=1675601344" width="22" height="22" alt="Next Arrow" />
        </span>
      </button>
    </div>
  </div>
</div>
<script>
  /* Initialize Tourguide.js */
  var tourguide = new Tourguide();
  function startTour() {
    tourguide.start();
  }
  // Attach the touruide start evene to the button press
  var tourbutton = document.getElementById("tourbutton");
  tourbutton.addEventListener("click", startTour);
</script>